<h1>Editing <%= @todo.name %> Todo</h1>
<% if @todo.errors.any? %>
  <ul>
  <% @todo.errors.full_messages.each do |mssg| %>
    <li><%= mssg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @todo do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>   
  <p>
    <%= f.submit "Edit" %>
  </p>
<% end %>
<%= link_to "List All Todos", todos_path %>
  
